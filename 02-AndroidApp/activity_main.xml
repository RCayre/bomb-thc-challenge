<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.insa.hdtran.ctfthc.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/startButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start"
            tools:clickable="true" />

        <Button
            android:id="@+id/stopButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stop"
            tools:clickable="true" />

        <Button
            android:id="@+id/changeFGButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Foreground"
            tools:clickable="true" />

        <Button
            android:id="@+id/changeBGButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Background"
            tools:clickable="true" />

        <TextView
            android:id="@+id/msg"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:freezesText="false"
            android:gravity="center"
            android:keepScreenOn="false"
            android:text="Test"
            tools:textColor="@android:color/holo_blue_bright"
            tools:textSize="24sp" />

        <TextView
            android:id="@+id/timeRemaining"
            android:layout_width="match_parent"
            android:layout_height="177dp"
            android:gravity="center"
            android:text="TextView"
            android:textStyle="normal|bold"
            tools:textColor="@android:color/holo_red_light"
            tools:textSize="36sp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
